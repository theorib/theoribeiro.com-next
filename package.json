{
  "name": "theoribeiro.com-next",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbo",
    "run-https-proxy": "pnpm dlx local-ssl-proxy --key localhost-key.pem --cert localhost.pem --source 3001 --target 3000",
    "preinstall": "npx only-allow pnpm",
    "build": "next build && next-export-optimize-images",
    "postbuild": "next-sitemap --config next-sitemap.config.cjs",
    "start": "npx serve@latest out",
    "start:next": "next start",
    "start:static": "pnpm dlx serve@latest out",
    "lint:eslint": "next lint",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "lint": "eslint . --quiet",
    "lint:staged": "pnpm lint-staged -v --config lint-staged.config.mjs",
    "lint:fix": "eslint . --cache --fix",
    "lint:next": "next lint",
    "lint:debug": "eslint . --debug",
    "lint:debug:prettier": "eslint-config-prettier src/app/layout.tsx",
    "lint:debug:timing": "TIMING=1 eslint",
    "lint:inspect": "pnpm dlx @eslint/config-inspector@latest",
    "lint:tsc": "tsc --noEmit --skipLibCheck",
    "test": "vitest",
    "test:ui": "vitest --ui --coverage",
    "prepare": "husky"
  },
  "dependencies": {
    "@formkit/auto-animate": "^0.9.0",
    "@mux/mux-player-react": "^3.11.4",
    "@mux/mux-video-react": "^0.30.2",
    "@radix-ui/react-aspect-ratio": "^1.1.8",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@t3-oss/env-nextjs": "^0.13.10",
    "babel-plugin-react-compiler": "19.1.0-rc.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.575.0",
    "next": "16.1.6",
    "next-sitemap": "^4.2.3",
    "player.style": "^0.3.1",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-hotkeys-hook": "^5.2.4",
    "react-photo-album": "^3.5.1",
    "react-schemaorg": "^2.0.1",
    "schema-dts": "^1.1.5",
    "sharp": "^0.34.5",
    "tailwind-merge": "^3.5.0",
    "vaul": "^1.1.2",
    "yet-another-react-lightbox": "^3.29.1",
    "zod": "^4.3.6",
    "zod-validation-error": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@commitlint/cz-commitlint": "^20.4.1",
    "@eslint/compat": "^2.0.2",
    "@eslint/eslintrc": "^3.3.4",
    "@eslint/js": "^10.0.1",
    "@next/eslint-plugin-next": "^16.1.6",
    "@tailwindcss/postcss": "^4.2.1",
    "@tailwindcss/typography": "^0.5.19",
    "@tanstack/eslint-plugin-query": "^5.91.4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/eslint-plugin-jsx-a11y": "^6.10.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/utils": "^8.56.1",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/eslint-plugin": "^1.6.9",
    "@vitest/ui": "^4.0.18",
    "commitizen": "^4.3.1",
    "conventional-changelog-atom": "^5.0.0",
    "eslint": "^9.39.3",
    "eslint-config-next": "16.1.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-compiler": "19.1.0-rc.2",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-react-refresh": "^0.5.2",
    "eslint-plugin-testing-library": "^7.16.0",
    "eslint-plugin-tsdoc": "^0.5.0",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "inquirer": "^13.3.0",
    "jiti": "^2.6.1",
    "jsdom": "^28.1.0",
    "lint-staged": "^16.2.7",
    "next-export-optimize-images": "^4.7.0",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.2.1",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1",
    "vite-tsconfig-paths": "^6.1.1",
    "vitest": "^4.0.18"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide",
      "esbuild",
      "sharp",
      "unrs-resolver"
    ]
  }
}
